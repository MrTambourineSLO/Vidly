@model Vidly.ViewModels.NewCustomerViewModel

@{
    ViewBag.Title = "Create new customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New customer</h2>
@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(a => a.Customer.Name, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Birthday)
        @Html.TextBoxFor(a => a.Customer.Birthday, new {@class = "form-control"})
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsLetter) Is subscribed to NewsLetter?
        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipType, new SelectList(Model.MembershipTypes, "Id", "MembershipName"),"Select membership type",new{@class="form-control"})
    </div>
}