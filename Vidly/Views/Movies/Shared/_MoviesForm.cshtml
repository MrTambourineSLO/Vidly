@model Vidly.ViewModels.NewMovieViewModel
<div class="form-group">
    @Html.LabelFor(l => l.Movie.Name)
    @Html.TextBoxFor(t => t.Movie.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Movie.Name)
</div>
<div class="form-group">
    @Html.LabelFor(l => l.Movie.ReleaseDate)
    @Html.TextBoxFor(t => t.Movie.ReleaseDate,"{0:d MMM yyyy}", new { @class = "form-control" })
    @Html.ValidationMessageFor(r => r.Movie.ReleaseDate)
</div>
<div class="form-group">
    @Html.LabelFor(l => l.Movie.NumberInStock)
    @Html.TextBoxFor(l => l.Movie.NumberInStock, new { @class = "form-control" })
    @Html.ValidationMessageFor(n => n.Movie.NumberInStock)
</div>
<div class="form-group">
    @Html.LabelFor(l => l.Movie.GenreId)
    @Html.DropDownListFor(t => t.Movie.GenreId, new SelectList(Model.Genres, "Id", "GenreName"), "Select genre", new {@class = "form-control"})
    @Html.ValidationMessageFor(g => g.Movie.GenreId)
</div>
@Html.HiddenFor(t => t.Movie.Id)
@Html.AntiForgeryToken()
<button class="btn btn-primary">
    Save
</button>